{
  "name": "copro-tickets-tracker",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:stop": "lsof -ti:3000 | xargs kill -9 || echo 'No process running on port 3000'",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "mongodb:start": "brew services start mongodb/brew/mongodb-community",
    "mongodb:stop": "brew services stop mongodb/brew/mongodb-community",
    "seed": "tsx scripts/seed.ts",
    "renovate:trigger": "gh workflow run renovate.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xnopre/copro-tickets-tracker.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xnopre/copro-tickets-tracker/issues"
  },
  "homepage": "https://github.com/xnopre/copro-tickets-tracker#readme",
  "description": "",
  "dependencies": {
    "mongoose": "^9.0.0",
    "next": "^16.0.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.4",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "mongodb-memory-server": "^11.0.0",
    "msw": "^2.12.3",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.5.6",
    "prettier": "^3.7.2",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
